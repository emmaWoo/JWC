				<include layout="@layout/item_work_list_done"/>
			</RelativeLayout>

			<RelativeLayout
					android:id="@+id/layout_tmp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

				<include layout="@layout/item_work_list_wait"/>
			</RelativeLayout>

			<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

				<include layout="@layout/item_work_list_done"/>
			</RelativeLayout>


			<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

				<include layout="@layout/item_work_list_cancel"/>
			</RelativeLayout>
		</LinearLayout>
