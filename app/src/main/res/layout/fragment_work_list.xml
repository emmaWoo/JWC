<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/background_color">

	<include layout="@layout/layout_toolbar_orange"/>

	<RelativeLayout
			android:id="@+id/layout_search"
			android:layout_width="wrap_content"
			android:layout_height="42dp"
			android:layout_below="@id/toolbar"
			android:background="@color/title_background_orange"
			android:layout_centerHorizontal="true">
		<EditText
				android:id="@+id/edit_search"
				android:layout_width="match_parent"
				android:layout_height="38dp"
				android:layout_marginRight="16dp"
				android:layout_marginLeft="16dp"
				android:drawableRight="@drawable/button_search"
				android:drawablePadding="2dp"
				android:hint="@string/search_hint"
				android:paddingLeft="16dp"
				android:textSize="15sp"
				android:textColor="@color/text_search"
				android:background="@color/white"
				android:layout_centerInParent="true"/>
	</RelativeLayout>

	<LinearLayout
			android:id="@+id/layout_button"
			android:layout_width="match_parent"
			android:layout_height="58dp"
			android:layout_below="@id/layout_search"
			android:orientation="horizontal">

		<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.5">
			<Button
					android:id="@+id/button_time"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/work_list_button_disable"
					android:text="@string/work_list_hour"
					android:textSize="18sp"
					android:textColor="@color/text_work_list_disable"/>

			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_alignParentBottom="true"
					android:background="#bdbdbd"/>

			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_top_arrow"
					android:layout_centerHorizontal="true"
					android:layout_alignParentBottom="true"/>
		</RelativeLayout>


		<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.5">
			<Button
					android:id="@+id/button_city"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/work_list_button_enable"
					android:text="@string/work_list_city"
					android:textSize="18sp"
					android:textColor="@color/text_work_list_enable"/>

			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_alignParentBottom="true"
					android:background="#bdbdbd"/>

			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_top_arrow"
					android:layout_centerHorizontal="true"
					android:layout_alignParentBottom="true"/>
		</RelativeLayout>
	</LinearLayout>

	<android.support.v7.widget.RecyclerView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/layout_button"
			android:layout_above="@+id/group_tab"/>

	<RadioGroup
			android:id="@+id/group_tab"
			android:layout_width="match_parent"
			android:layout_height="58dp"
			android:layout_alignParentBottom="true"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:background="#ffbb28"
			android:orientation="horizontal">

		<RadioButton
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.3"
				android:button="@null"
				android:drawableTop="@drawable/ic_mylist"
				android:drawablePadding="7dp"
				android:paddingTop="9dp"
				android:text="@string/my_work_list"
				android:textSize="13sp"
				android:textColor="@color/white"
				android:gravity="center_horizontal"/>

		<RadioButton
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.3" android:button="@null"
				android:drawableTop="@drawable/ic_mydo"
				android:drawablePadding="7dp"
				android:paddingTop="9dp"
				android:text="@string/free"
				android:textSize="13sp"
				android:textColor="@color/white"
				android:gravity="center_horizontal"/>

		<RadioButton
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.3" android:button="@null"
				android:drawableTop="@drawable/ic_myfollow"
				android:drawablePadding="7dp"
				android:paddingTop="9dp"
				android:text="@string/follow_list"
				android:textSize="13sp"
				android:textColor="@color/white"
				android:gravity="center_horizontal"/>

	</RadioGroup>

</RelativeLayout>
