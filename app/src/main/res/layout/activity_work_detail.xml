<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_color"
              android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar_orange"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/label_work_title"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:singleLine="true"
        android:text="短期行政工讀"
        android:gravity="center"
        android:background="#9e5f4d"
        android:textSize="23sp"
        android:textColor="@color/white"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:drawableLeft="@drawable/icon_circle"
                    android:drawablePadding="11dp"
                    android:text="@string/work_type"
                    android:textSize="18sp"
                    android:textColor="#7b7b7b"/>

                <TextView
                    android:id="@+id/label_work_typ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#505050"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:drawableLeft="@drawable/icon_circle"
                    android:drawablePadding="11dp"
                    android:text="@string/work_time"
                    android:textSize="18sp"
                    android:textColor="#7b7b7b"/>

                <TextView
                    android:id="@+id/label_work_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#505050"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:drawableLeft="@drawable/icon_circle"
                    android:drawablePadding="11dp"
                    android:text="@string/work_place"
                    android:textSize="18sp"
                    android:textColor="#7b7b7b"/>

                <TextView
                    android:id="@+id/label_work_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#505050"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:drawableLeft="@drawable/icon_circle"
                    android:drawablePadding="11dp"
                    android:text="@string/work_context"
                    android:textSize="18sp"
                    android:textColor="#7b7b7b"/>

                <TextView
                    android:id="@+id/label_work_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:textSize="18sp"
                    android:textColor="#505050"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:drawableLeft="@drawable/icon_circle"
                    android:drawablePadding="11dp"
                    android:text="@string/work_need_number"
                    android:textSize="18sp"
                    android:textColor="#7b7b7b"/>

                <TextView
                    android:id="@+id/label_work_need_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#505050"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:drawableLeft="@drawable/icon_circle"
                    android:drawablePadding="11dp"
                    android:text="@string/work_have_meals"
                    android:textSize="18sp"
                    android:textColor="#7b7b7b"/>

                <TextView
                    android:id="@+id/label_work_have_meals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#505050"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:drawableLeft="@drawable/icon_circle"
                    android:drawablePadding="11dp"
                    android:text="@string/work_payroll_day"
                    android:textSize="18sp"
                    android:textColor="#7b7b7b"/>

                <TextView
                    android:id="@+id/label_work_payroll_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#505050"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:drawableLeft="@drawable/icon_circle"
                    android:drawablePadding="11dp"
                    android:text="@string/work_company_name"
                    android:textSize="18sp"
                    android:textColor="#7b7b7b"/>

                <TextView
                    android:id="@+id/label_work_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:maxLength="16"
                    android:shadowColor="#bfb3b8"
                    android:textSize="18sp"
                    android:textColor="#505050"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:drawableLeft="@drawable/icon_circle"
                    android:drawablePadding="11dp"
                    android:text="@string/work_contact_person"
                    android:textSize="18sp"
                    android:textColor="#7b7b7b"/>

                <TextView
                    android:id="@+id/label_work_contact_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#505050"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:drawableLeft="@drawable/icon_circle"
                    android:drawablePadding="11dp"
                    android:text="@string/work_contact_person_phone"
                    android:textSize="18sp"
                    android:textColor="#7b7b7b"/>

                <TextView
                    android:id="@+id/label_work_contact_person_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="20dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#505050"/>

                <RelativeLayout
                    android:id="@+id/layout_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp">

                    <Button
                        android:id="@+id/button_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_do_1"/>

                    <TextView
                        android:id="@+id/label_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/icon_follow_detail"
                        android:drawablePadding="3dp"
                        android:text="@string/work_follow"
                        android:textColor="#cbcaca"
                        android:textSize="18sp"/>
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="70dp"
                android:background="@color/yellow"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/label_work_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/label_work_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_city"
                android:layout_alignLeft="@+id/layout_city"
                android:layout_alignRight="@+id/layout_city"
                android:background="@color/red"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/label_work_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/label_work_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>