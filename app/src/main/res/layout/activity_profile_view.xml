<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/background_color"
			  android:orientation="vertical"
			  android:focusable="true"
			  android:focusableInTouchMode="true">

	<include
			android:id="@+id/toolbar"
			layout="@layout/layout_toolbar"/>
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

			<RelativeLayout android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="15dp"
							android:layout_marginLeft="18dp"
							android:layout_marginBottom="6dp">

				<ImageView
						android:id="@+id/icon_avatar"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="21dp"
						android:src="@drawable/icon_person_img"
						android:layout_centerVertical="true"/>

			</RelativeLayout>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:drawableLeft="@drawable/icon_dot"
					android:drawablePadding="11dp"
					android:text="@string/name"
					android:textSize="16sp"
					android:textColor="#76b3c5"/>

			<TextView
					android:id="@+id/label_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="42dp"
					android:layout_marginTop="9dp"
					android:layout_marginRight="16dp"
					android:maxLength="12"
					android:singleLine="true"
					android:textSize="22sp"
					android:textColor="#505050"/>

			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="6dp"
					android:layout_marginLeft="42dp"
					android:layout_marginRight="16dp"
					android:background="#dedede"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:layout_marginTop="22dp"
					android:drawableLeft="@drawable/icon_dot"
					android:drawablePadding="11dp"
					android:text="@string/id"
					android:textSize="16sp"
					android:textColor="#76b3c5"/>

			<TextView
					android:id="@+id/label_id"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="42dp"
					android:layout_marginTop="9dp"
					android:layout_marginRight="16dp"
					android:shadowColor="#bfb3b8"
					android:textSize="22sp"
					android:textColor="#505050"
					android:singleLine="true"
					android:maxLength="10"/>

			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="6dp"
					android:layout_marginLeft="42dp"
					android:layout_marginRight="16dp"
					android:background="#dedede"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:layout_marginTop="22dp"
					android:drawableLeft="@drawable/icon_dot"
					android:drawablePadding="11dp"
					android:text="@string/address"
					android:textSize="16sp"
					android:textColor="#76b3c5"/>

			<TextView
					android:id="@+id/label_address"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="42dp"
					android:layout_marginTop="9dp"
					android:layout_marginRight="16dp"
					android:shadowColor="#bfb3b8"
					android:textSize="16sp"
					android:textColor="#505050"
					android:singleLine="true"
					android:maxLength="100"/>

			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="6dp"
					android:layout_marginLeft="42dp"
					android:layout_marginRight="16dp"
					android:background="#dedede"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:layout_marginTop="22dp"
					android:drawableLeft="@drawable/icon_dot"
					android:drawablePadding="11dp"
					android:text="@string/working_location"
					android:textSize="16sp"
					android:textColor="#76b3c5"/>

			<TextView
					android:id="@+id/label_location"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="42dp"
					android:layout_marginTop="9dp"
					android:layout_marginRight="16dp"
					android:textSize="16sp"/>

			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="6dp"
					android:layout_marginLeft="42dp"
					android:layout_marginRight="16dp"
					android:background="#dedede"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:layout_marginTop="22dp"
					android:drawableLeft="@drawable/icon_dot"
					android:drawablePadding="11dp"
					android:text="@string/email"
					android:textSize="16sp"
					android:textColor="#76b3c5"/>

			<TextView
					android:id="@+id/label_email"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="42dp"
					android:layout_marginTop="9dp"
					android:layout_marginRight="16dp"
					android:singleLine="true"
					android:maxLength="50"
					android:shadowColor="#bfb3b8"
					android:textSize="22sp"
					android:textColor="#505050"/>

			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="6dp"
					android:layout_marginLeft="42dp"
					android:layout_marginRight="16dp"
					android:background="#dedede"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:layout_marginTop="22dp"
					android:drawableLeft="@drawable/icon_dot"
					android:drawablePadding="11dp"
					android:text="@string/bank_code"
					android:textSize="16sp"
					android:textColor="#76b3c5"/>

			<TextView
					android:id="@+id/label_bank_code"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="42dp"
					android:layout_marginTop="9dp"
					android:layout_marginRight="16dp"
					android:singleLine="true"
					android:maxLength="3"
					android:shadowColor="#bfb3b8"
					android:textSize="22sp"
					android:textColor="#505050"/>

			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="6dp"
					android:layout_marginLeft="42dp"
					android:layout_marginRight="16dp"
					android:background="#dedede"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:layout_marginTop="22dp"
					android:drawableLeft="@drawable/icon_dot"
					android:drawablePadding="11dp"
					android:text="@string/bank_account"
					android:textSize="16sp"
					android:textColor="#76b3c5"/>

			<TextView
					android:id="@+id/label_bank_account"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="42dp"
					android:layout_marginTop="9dp"
					android:layout_marginRight="16dp"
					android:singleLine="true"
					android:maxLength="16"
					android:shadowColor="#bfb3b8"
					android:textSize="22sp"
					android:textColor="#505050"/>

			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="6dp"
					android:layout_marginLeft="42dp"
					android:layout_marginRight="16dp"
					android:background="#dedede"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:layout_marginTop="22dp"
					android:drawableLeft="@drawable/icon_dot"
					android:drawablePadding="11dp"
					android:text="@string/gender"
					android:textSize="16sp"
					android:textColor="#76b3c5"/>

			<TextView
					android:id="@+id/label_gender"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="42dp"
					android:layout_marginTop="9dp"
					android:layout_marginRight="16dp"
					android:textSize="22sp"
					android:textColor="#505050"/>

			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="6dp"
					android:layout_marginLeft="42dp"
					android:layout_marginRight="16dp"
					android:background="#dedede"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="18dp"
					android:layout_marginTop="22dp"
					android:drawableLeft="@drawable/icon_dot"
					android:drawablePadding="11dp"
					android:text="@string/birthday"
					android:textSize="16sp"
					android:textColor="#76b3c5"/>

			<TextView
					android:id="@+id/label_birthday"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="42dp"
					android:layout_marginTop="9dp"
					android:layout_marginRight="16dp"
					android:textSize="22sp"
					android:textColor="#505050"/>

			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="6dp"
					android:layout_marginLeft="42dp"
					android:layout_marginRight="16dp"
					android:layout_marginBottom="20dp"
					android:background="#dedede"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>